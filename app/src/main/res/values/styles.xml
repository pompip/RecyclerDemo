<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="appTheme_dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="android:colorBackground">@color/colorBackground_dark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_dark</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse_dark</item>
        <item name="android:windowBackground">@color/windowBackground_dark</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse_dark</item>
        <item name="android:colorForeground">@color/colorForeground_dark</item>
        <item name="colorButtonNormal">#333</item>
    </style>

</resources>
